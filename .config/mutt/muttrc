# vim: filetype=neomuttrc
source /usr/local/share/mutt-wizard/mutt-wizard.muttrc # mw-autogenerated

set signature = "/home/jordy/.config/mutt/signature"
set sig_on_top = true
set sig_dashes = false
set sort = threads
set sort_aux = reverse-last-date-received
set date_format="%d/%m/%y %H:%M"
# set pager_index_lines = 10
# set indent_string=""
set imap_fetch_chunk_size = 200
set mail_check=10 # to avoid lags using IMAP with some email providers (yahoo for example)

macro index,pager gp "<change-folder>=Processed<enter>" "go to Processed"
macro index,pager Mp ";<save-message>=Processed<enter>" "move mail to Processed"
macro index,pager Cp ";<copy-message>=Processed<enter>" "copy mail to Processed"

macro index,pager i1 '<sync-mailbox><enter-command>source /home/jordy/.config/mutt/accounts/jordy@verhelst.xyz.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jordy@verhelst.xyz"
