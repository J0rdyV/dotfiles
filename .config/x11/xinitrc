# Enable the best keyboard layout :P
setxkbmap -layout dvorak

# Remove blue light
redshift -O 4000K &

# Set backlight to 70%
# xbacklight -set 70 &
# echo 70 > /sys/class/backlight/nv_backlight/brightness

# Enable numlock
numlockx &

# Enable clipboard history
clipmenud &

# Set wallpaper
# pacgraph -o -e -n -s -b "#1d2021" -l "#7c6f64" -t "#458588" -d "#ebdbb2" -f "~/dotfiles/wallpaper" && feh --no-fehbg --bg-max ~/dotfiles/wallpaper.svg -B "#1d2021"
feh --no-fehbg --bg-fill ~/personal/wallpapers/jokeFrima.jpg

# Enable opacity
xcompmgr &

# Exec time script to show time and battery in dwm title
# dwmtime &
dwmblocks &

# Notifications
dunst &

# Speed up xrate
# xset r rate 300 50 &
xset r rate 200 60 &

# Remove mouse when idle
unclutter &

# fix webcam
v4l2-ctl -d /dev/video0 -c exposure_auto=1 &
v4l2-ctl -d /dev/video0 -c exposure_absolute=100 &

# Start WM
exec dwm
# exec xfce4-session
