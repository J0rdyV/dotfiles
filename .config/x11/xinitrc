#!/bin/sh

redshift -O 5000k &   # Remove blue light
clipmenud &           # Enable clipboard history
xcompmgr &            # Enable opacity
numlockx &            # Set numlock
dunst &               # Notifications
dwmtime &             # Put time in head
tester &

fixscreen &           # Display tweaks

# fix webcam
v4l2-ctl -d /dev/video0 -c saturation=80 &
v4l2-ctl -d /dev/video0 -c brightness=170 &
v4l2-ctl -d /dev/video0 -c contrast=55 &

# fix gnome-keyring
dbus-update-activation-environment --all

ssh-agent dwm         # Start WM
