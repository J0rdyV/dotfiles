#!/bin/sh

setxkbmap -layout dvorak	# Enable the best keyboard layout :P
redshift -O 4000K &			# Remove blue light
numlockx &					# Enable numlock
clipmenud &					# Enable clipboard history
xcompmgr &					# Enable opacity
dwmblocks &					# Dwm title bar
dunst &						# Notifications
xset r rate 200 60 &		# Speed up xrate
unclutter &					# Hide cursor when not in use
tester &

feh --no-fehbg --bg-max --image-bg "#282828" \
	"$XDG_DATA_HOME"/wallpaper &                # Set wallpaper

v4l2-ctl -d /dev/video0 -c saturation=85 &	# fix webcam
v4l2-ctl -d /dev/video0 -c brightness=170 &
v4l2-ctl -d /dev/video0 -c contrast=85 &

ssh-agent dwm				# Start WM
