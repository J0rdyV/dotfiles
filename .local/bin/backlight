#! /bin/sh

case "$1" in
	+) cat /sys/class/backlight/amdgpu_bl0/brightness | sed -e 's/$/ 20 + p/' | sudo dc > /sys/class/backlight/amdgpu_bl0/brightness;;
	-) cat /sys/class/backlight/amdgpu_bl0/brightness | sed -e 's/$/ 20 - p/' | sudo dc > /sys/class/backlight/amdgpu_bl0/brightness;;
	*) sudo echo $1 > /sys/class/backlight/amdgpu_bl0/brightness;;
esac
