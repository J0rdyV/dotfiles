#! /bin/sh
cd ${XDG_CONFIG_HOME}/nvim/vimwiki/
FILE=diary/$(date '+%Y-%m-%d').md
YESTERDAY=diary/$(ls diary | tail -n 1)

if [ ! -f $FILE ]; then
	echo '' > $FILE
	date '+%Y-%m-%d' >> $FILE
	echo '' >> $FILE
	grep -e '^ *\.' $YESTERDAY >> $FILE
	sed -i -E 's/^( *)\. /\1> /g' $YESTERDAY
fi

${EDITOR} $FILE

