#! /bin/sh
cd ${XDG_CONFIG_HOME}/nvim/vimwiki/
FILE=diary/$(date '+%Y-%m-%d').md

if [ ! -f $FILE ]; then
	echo '' > $FILE
	echo $(date '+%Y-%m-%d') >> $FILE
	echo '' >> $FILE
	cat diary/$(ls diary | tail -n 2 | head -n 1) | grep -e '^ *\.' >> $FILE
	sed -i -E 's/^( *)\. /\1> /g' diary/$(ls diary | tail -n 2 | head -n 1)
fi

${EDITOR} diary/$(date '+%Y-%m-%d').md

