#!/bin/bash

# check if arguments are given
# left-of, right-of, above, below can be given

if [ $# -eq 0 ]; then
  xrandr --auto && xset r rate 200 60 && xrandr --output HDMI-1 --auto --output eDP-1 --auto --left-of HDMI-1 && setxkbmap -layout dvorak && feh --no-fehbg --bg-fill "$XDG_DATA_HOME"/wallpaper
else
  xrandr --auto && xset r rate 200 60 && xrandr --output HDMI-1 --auto --output eDP-1 --auto --$1 HDMI-1 && setxkbmap -layout dvorak && feh --no-fehbg --bg-fill "$XDG_DATA_HOME"/wallpaper
fi

